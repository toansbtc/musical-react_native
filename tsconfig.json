{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src",
    "node_modules",
    "./@types/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*.d.ts"
  ]
}